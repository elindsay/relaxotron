.audio
  %audio{loop: true}
    %source{src: "/assets/audio/large_waterfall.wav"}
.main_video
  %video.item_0{width: 940, height: 528, controls: false, loop: true, autoplay: false, preload: "auto", poster: "/assets/posters/potomac.jpg"}
    %source{src: "/assets/potomac.m4v", type:"video/mp4"}
  .video_overlay
    .video_loop
      .play_pause
        .play.hidden
          &nbsp;
        .pause
          .bar_one
            &nbsp;
          .bar_two
            &nbsp;
          .bar_three
            &nbsp;

      .two_min.loop_select.selected{data: {length: 2}}
        2 Min
      .five_min.loop_select{data: {length: 5}}
        5 Min
      .ten_min.loop_select{data: {length: 10}}
        10 Min
      .thirty_min.loop_select{data: {length: 30}}
        30 Min
      .invinite.loop_select
        Forever

.video_selector.fadeable
  %ul.selector
    %li.item-0
      = image_tag "posters/potomac.jpg", data: {video: "/assets/potomac.m4v", audio: "/assets/audio/large_waterfall.wav"}
    %li.item-2
      = image_tag "posters/field.jpg", data: {video: "/assets/field.m4v", audio: "/assets/audio/afrika_c.mp3"}
    %li.item-2
      = image_tag "posters/london.jpg", data: {video: "/assets/london.m4v", audio: "/assets/audio/etherealmotion159.mp3"}
    %li.item-3
      = image_tag "posters/slow_water.jpg", data: {video: "/assets/slow_water.m4v", audio: "assets/audio/birdies.wav"}
    %li.item-4.last
      = image_tag "posters/northern_lights.jpg", data: {video: "/assets/northern_lights.m4v", audio: "assets/audio/cloud_two.mp3"}
