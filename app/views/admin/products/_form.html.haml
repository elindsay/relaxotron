.product_form
  = form_for [:admin, @product], html: { multipart: true } do|f|
    - if @product.errors.any?
      %ul
        - @product.errors.full_messages.each do |m|
          %li
            = m
    
    %p
      = f.label :name, "Name:"
      %br
      = f.text_field :name
    %p
      = f.label :description, "Description:"
      %br
      = f.text_area :description
    %p
      = f.label :price_in_cents, "Price In Cents:"
      %br
      = f.text_field :price_in_cents
    %p
      = f.label :stock_count, "Stock Count:"
      %br
      = f.text_field :stock_count
    %p
      = f.label :image, "Image:"
      %br
      = f.file_field :image
    = f.submit
